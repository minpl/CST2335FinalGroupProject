<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="c_DetailsEditText">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="c_DetailsLabels">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="c_Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="c_ActionIcon">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
    </style>



    <!-- Table styles -->

    <style name="c_HeadingBlue">
        <item name="android:background">#607D8B</item>
    </style>

    <!-- Table row colors are set programatically -->

    <style name="c_HeadingCell">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="c_PriceCell" parent="c_HeadingCell">
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="c_LitresCell" parent="c_HeadingCell">
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="c_KilometersCell" parent="c_HeadingCell">
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="c_DateCell" parent="c_HeadingCell">
        <item name="android:layout_width">200dp</item>
    </style>

</resources>
